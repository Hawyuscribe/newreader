# Copy this file to .env.local and adjust secrets to match your Heroku config.

DJANGO_SETTINGS_MODULE=django_neurology_mcq.neurology_mcq.settings
PYTHONPATH=/app/django_neurology_mcq

# Override with values from Heroku using scripts/sync_heroku_env.sh
SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

DATABASE_URL=postgres://postgres:postgres@db:5432/neurology_mcq
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# OpenAI configuration
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-5-mini
OPENAI_FALLBACK_MODEL=gpt-4o-mini

# Optional toggles for entrypoint
RUN_MIGRATIONS=1
RUN_COLLECTSTATIC=0
